<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@drawable/widget_bg"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/bottom_img_album"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/widget_cover_4x4" />

    <LinearLayout
        android:id="@+id/btm_linear"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bottom_tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="E云音乐，随心所欲"
            android:textColor="#f0f0f0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bottom_tv_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="......"
            android:textColor="#999999"
            android:textSize="10sp" />
        \
    </LinearLayout>

    <ImageView
        android:id="@+id/player_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@mipmap/player_btn_radio_play_normal" />

    <ImageView
        android:id="@+id/play_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@mipmap/player_btn_next_normal" />

</LinearLayout>